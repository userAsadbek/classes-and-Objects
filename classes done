//problem 3
class Heading {
private:
 string name;
 string report;
 public: Heading(string n="ABC INDUSTRIES",string r="REPORT") {
  name=n;
  report=r;}
 void display() {
  HANDLE screen = GetStdHandle(STD_OUTPUT_HANDLE);
  COORD p1 = {33,1};
  SetConsoleCursorPosition(screen, p1);
  cout << name << endl;

  COORD p2 = {30,2};
  SetConsoleCursorPosition(screen, p2);
  cout << report << endl;
 }

 // version with two arguments
 void display(string n, string r) {
  HANDLE screen = GetStdHandle(STD_OUTPUT_HANDLE);
  COORD p1 = {33,1};
  SetConsoleCursorPosition(screen, p1);
  cout << n << endl;

  COORD p2 = {30,2};
  SetConsoleCursorPosition(screen, p2);
  cout << r << endl;
 }
};

//car class
class CAR {
private: int i;
 string made;
 int speed;
public:
 CAR(int y=2000,string m="Unknown",int s=0) {
  i=y;
  made=m;
  speed=s;}
 void setYear() {
  int y;
  cout<<"Enter year"; cin>>y;
  i=y;}
 void setName() {
  string m;
  cout<<"Enter name of make "; cin>>m;
  made=m;}
 void setSpeed() {
  int s;
  cout<<"Enter speed"; cin>>s;
  speed=s;}
 int getSpeed() { return speed;}
 string getName() { return made;}
 int  getYear() { return i;}
 int Acc(){ return speed+=5;}
 int Brake(){ return speed-=5;}

 void display() {
       cout<<"YEAR "<<i<<endl;
       cout<<"NAME "<<made<<endl;
        cout<<"SPEED "<<speed<<endl;}
};


class Widget {
 int i;
 const int p=160;
 public:
  Widget() {
 i=0;
    }
 void setWidget(int z) { i=z; }
 int getWidget() { return i; }
void display() {
  cout<<i/p<<" days needed to produce";
 }
};

class Population {
private:
  int birth;
  int death;
  int population;
public: Population(int b=0,int d=0,int p=2) {
  birth=b;
  death=d;
  population=p;
}
 void setPopulation() {
 int p;
 cout<<"Enter current population: "; cin>>p;
 if (p<2) population=2; population=p;}
 int getPopulation() { return population; }
 void setBirth() {
  int b;
 cout<<"Enter birth rate"; cin>>b;
 if (b<0) birth=0; birth=b;
}
 void setDeath() {
 int d;
 cout<<"Enter death rate"; cin>>d;
 if (d<0) death=0; death=d;
}
  int getBirth() { return birth; }
 void display() {
 cout<<"\n Birth rate after getted is "<<double(birth)/population<<endl;
 cout<<"\n Death rate after getted is "<<double(death)/population<<endl;
}
};

class Tip {
private:
 double tax;
public:
 Tip(double a=65) {  tax=a/100.0; }
 void ComputeTip(double x,double z) {
  double meal=x/(1+tax);
  cout<<fixed<<setprecision(2);
  cout<<"Cost with tax "<<x<<endl;
  cout<<"Cost without tax "<<meal<<endl;
  cout<<"Tip is "<<meal*z<<endl;

      }
};

class Inventory {
 private: int id;
 int qyt;
 double cost;
 double total;
 void setTotal() {
  total=qyt*cost;
 }
 public:
 Inventory() {
  id=0;
  qyt=0;
  cost=0;
  total=0;}
 Inventory(int id1,int qyt1,double cost1) {
 id=id1;
  qyt=qyt1;
  cost=cost1;
  setTotal();

 }
 void setItemnumber(int id1){ id=id1;}
 void SetQuantity(int qyt1){ qyt=qyt1; setTotal();}
 void setCost(double cost1) { cost=cost1; setTotal();}
 void setTotal(double total1) { total=cost*qyt;}
 int getItemnumber() { return id; }
 int getQuantity() { return qyt; }
 double getCost() { return cost; }
 double getTotal() { return total; }
  void display(){
  cout<<"id of product : "<<id<<endl;
  cout<<"qty of product : "<<qyt<<endl;
  cout<<"cost of product : "<<cost<<endl;
  cout<<"total of product : "<<total<<endl;

 }
};
