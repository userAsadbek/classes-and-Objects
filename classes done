//problem 2
class Data {
private:
 int month;
 int day;
 int year;
 string monthName[12];
public:
 Data(int i=1,int m=1,int y=2001) {
  if (i>=1 && i<=31)  day=i; else day=1;
  if (m>=1 && m<=12)  month=m; else month=1;
  if (y>=1950 && y<=2020)  year=y;else year=2001;

  monthName[0]="January";
  monthName[1]="February";
  monthName[2]="March";
  monthName[3]="April";
  monthName[4]="May";
  monthName[5]="June";
  monthName[6]="July";
  monthName[7]="August";
  monthName[8]="September";
  monthName[9]="October";
  monthName[10]="November";
  monthName[11]="December";
 }
  void setMonth();
  void setDay();
  void setYear();
  int getDay() { return day;}
  int getMonth() { return month;}
  int getYear() { return year; }
  void getMonthnames();
  void display();


};
void Data::getMonthnames() {


for(int i=0;i<12;i++) {
 cout<<"\n Month "<<i+1<<" : ";
 getline(cin,monthName[i]);} }
void Data::setDay() {
 cout<<"Enter day ";
 cin>>day;
 while(day<1 || day>31) {
  cout<<"Not valid day enter again";
  cin>>day; }
    }
void Data::setMonth() {
 cout<<"Enter month ";
 cin>>month;
 while(month<1 || month>12) {
  cout<<"Not valid month enter again";
  cin>>month;}
}
void Data::setYear() {
 cout<<"Enter year ";
 cin>>year;
 while(year<1950|| year>2020) {
  cout<<"Not valid year enter again";
  cin>>year;
 }
}

void Data::display() {
 cout<<"\n Data "<<day<<"/"<<month<<"/"<<year;
 cout<<"\n"<<monthName[month-1]<<" "<<day<<", "<<year;
 cout<<"\n"<<day<<" "<<monthName[month-1]<<" "<<year<<endl;
}
