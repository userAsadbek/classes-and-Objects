class IntRange {
private:
 int maxV;
 int minV;
 int i;
public:
 IntRange(int minVAL, int maxVAL)
 { minV=minVAL;
 maxV=maxVAL;}
 int getInt();
};
int IntRange::getInt() {
 cout<<"Enter number : ";
 cin>>i;
 while(i<minV || i>maxV) {
  cout<<"Not valid numbe enter again";
  cin>>i;
 } return i;}
